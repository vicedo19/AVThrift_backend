# Core
SECRET_KEY=replace-me
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS/CSRF
CORS_ALLOW_ALL_ORIGINS=true
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=
CORS_ALLOW_CREDENTIALS=true
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Database (set DATABASE_ENGINE=postgres to enable Postgres)
DATABASE_ENGINE=postgres
DATABASE_NAME=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=
DATABASE_PORT=

# Frontend base URL used for building email links
FRONTEND_URL=http://localhost:3000

# Cache / Sessions (Prod recommended)
# Use a managed Redis instance for production cache. Example:
# REDIS_URL=redis://:password@redis-host:6379/1
REDIS_URL=

# Sentry
SENTRY_DSN=
SENTRY_ENV=development
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_SEND_DEFAULT_PII=true


# Default currency code for new products (ISO 4217)
DEFAULT_CURRENCY=NGN

# Email (override for SMTP testing in dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
DEFAULT_FROM_EMAIL=AVThrift <noreply@example.com>

# Orders logging sampling (production only)
# Fraction of INFO-level orders logs to emit (0.0â€“1.0); use 1.0 to disable.
# Critical events (e.g., order_status_changed) are never sampled.
ORDERS_LOG_SAMPLE_RATE=1.0

# Cart / Reservations
# TTL for cart reservations (minutes)
CART_RESERVATION_TTL_MINUTES=30

# Cart abandonment TTL (minutes) for stale active carts
CART_ABANDON_TTL_MINUTES=120
